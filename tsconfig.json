{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"],
      "typeRoots": ["node_modules/@types", "src/types"]
    },
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
